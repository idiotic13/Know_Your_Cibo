            <label for="rating4">4</label>

            <input type="radio" id="rating5" name="rating" class="rating-option" value="5">
            <label for="rating5">5</label>
        </div>

        <label for="comments">Describe your experience(Optional):</label>
        <textarea id="comments" name="comments" rows="4" ></textarea>

        <button type="submit">Submit Feedback</button>

      </div>
    </form>
  </div>
</main>


