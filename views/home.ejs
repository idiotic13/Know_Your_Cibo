<!-- transitions -->
 <script>
  document.addEventListener('DOMContentLoaded', () => {
    const baseDelay = <%= JSON.stringify(enableAnimations ? 5 : 0.5) %>;

  TweenMax.from(".heading", 1, {
    delay: baseDelay,
    opacity: 0,
    x: -20,
    ease: Expo.easeInOut
  });

  TweenMax.staggerFrom(".menu-links ul li", 1, {
    delay: baseDelay + 0.2,
    opacity: 0,
    x: -20,
    ease: Power3.easeInOut
  }, 0.08);

  TweenMax.from(".search", 1, {
    delay: baseDelay + 0.5,
    opacity: 0,
    x: -20,
    ease: Expo.easeInOut
  });

  TweenMax.from(".account", 1, {
    delay: baseDelay + 0.6,
    opacity: 0,
    x: -20,
    ease: Expo.easeInOut
  });

TweenMax.from(".username", 1, {
    delay: baseDelay + 0.6,
    opacity: 0,
    x: -20,
    ease: Expo.easeInOut
  });


  TweenMax.staggerFrom(".social-media ul li", 1, {
  delay: baseDelay + 0.7,
  opacity: 0,
  y: 20,
  ease: Power3.easeInOut
}, 0.08);

  TweenMax.staggerFrom(".side-strip", 1, {
  delay: baseDelay + 0.8,
  opacity: 0,
  y: 20,
  ease: Power3.easeInOut
}, 0.08);

  TweenMax.from(".scrolling", 1, {
  delay: baseDelay + 0.75,
  opacity: 0,
  x: -20,
  ease: Expo.easeInOut
});
});

document.addEventListener('DOMContentLoaded', () => {
if (window.location.hash) {
  const id = window.location.hash.replace('#', '');
  const element = document.getElementById(id);
  if (element) {
    // Scroll to the element with smooth behavior
    element.scrollIntoView({ behavior: 'smooth' });
  }
}
});
</script>

